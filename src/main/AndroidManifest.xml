<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.ikeaqueuelesscheckout">

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:required="false"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProductsActivity"
            android:label="@string/subpage_products"/>
        <activity android:name=".ShoppingListActivity"
            android:label="@string/subpage_shoppinglist"/>
        <activity android:name=".SettingsActivity"
            android:label="@string/subpage_settings"/>
        <activity android:name=".LoginActivity"
            android:label="@string/subpage_login"/>
        <activity android:name=".PaymentActivity"
            android:label="@string/subpage_payment"/>
    </application>

</manifest>